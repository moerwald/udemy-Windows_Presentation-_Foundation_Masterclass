<UserControl x:Class="EvernoteClone.Views.CustomControls.DisplayNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EvernoteClone.Views.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="350">
    <StackPanel>
        <TextBlock Text="{Binding Title}"/>
        <TextBlock Text="{Binding UpdatedAt}" FontSize="9" Foreground="DodgerBlue"/>
    </StackPanel>
</UserControl>
